<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="76dp"
    tools:context=".ui.account.AccountFragment">

    <EditText
        android:id="@+id/update_zip_edittext"
        android:layout_width="0dp"
        android:layout_height="48dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/update_zipcode_button"
        app:layout_constraintBottom_toBottomOf="@id/update_zipcode_button"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp"
        android:inputType="number"
        android:maxLength="5"
        android:layout_marginTop="16dp"
        android:background="@drawable/background_edittext"
        android:paddingHorizontal="16dp"
        android:hint="Zip Code"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/update_zipcode_button"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:enabled="false"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/update_zip_edittext"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:textSize="16sp"
        app:elevation="12dp"
        app:cornerRadius="10dp"
        android:textAllCaps="false"
        android:text="Update"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/logout_button"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:layout_constraintTop_toBottomOf="@id/update_zipcode_button"
        android:layout_marginTop="24dp"
        android:layout_marginHorizontal="16dp"
        app:cornerRadius="10dp"
        android:textAllCaps="false"
        app:elevation="12dp"
        android:textSize="16sp"
        android:text="Logout"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/delete_account_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        android:layout_marginHorizontal="16dp"
        app:cornerRadius="45dp"
        android:backgroundTint="@android:color/holo_red_light"
        android:text="Delete Account"/>

</androidx.constraintlayout.widget.ConstraintLayout>