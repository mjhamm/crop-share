<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bottom_sheet_background"
    android:paddingBottom="24dp">

    <TextView
        android:id="@+id/delete_warning"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="24dp"
        android:textSize="16sp"
        android:text="@string/delete_account_warning"
        android:gravity="center"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginHorizontal="16dp"
        android:paddingHorizontal="16dp"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/cancel_delete_button"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Cancel"
        app:layout_constraintTop_toBottomOf="@id/delete_warning"
        android:layout_marginTop="24dp"
        android:layout_marginHorizontal="16dp"
        android:textAllCaps="false"
        android:textSize="16sp"
        app:cornerRadius="10dp"/>


    <com.google.android.material.button.MaterialButton
        android:id="@+id/delete_account_button"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Delete Account"
        app:layout_constraintTop_toBottomOf="@id/cancel_delete_button"
        android:layout_marginTop="24dp"
        android:layout_marginHorizontal="16dp"
        app:backgroundTint="@android:color/holo_red_light"
        android:textAllCaps="false"
        android:textSize="16sp"
        app:cornerRadius="10dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>