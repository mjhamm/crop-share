<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/not_logged_in_store"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="You are not logged in. Please log in or register in order to create or edit your store."
        android:gravity="center"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="24dp"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/login_button_store"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/not_logged_in_store"
        app:layout_constraintEnd_toStartOf="@id/register_button_store"
        android:text="Login"
        app:cornerRadius="45dp"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/register_button_store"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/not_logged_in_store"
        app:layout_constraintStart_toEndOf="@id/login_button_store"
        android:text="Register"
        app:cornerRadius="45dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>